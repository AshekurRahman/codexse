APP_NAME=CodexSE
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# =============================================================================
# LOGGING
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Slack notifications for critical errors (optional)
LOG_SLACK_WEBHOOK_URL=

# =============================================================================
# DATABASE
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=codexse
DB_USERNAME=root
DB_PASSWORD=

# Database Query Monitoring
# Log queries slower than threshold (in milliseconds)
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# SESSION & CACHE
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

# =============================================================================
# REDIS (Optional - for better performance)
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# AWS S3 (Optional - for file storage)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# STRIPE PAYMENT GATEWAY
# =============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_KEY=your_stripe_publishable_key
STRIPE_SECRET=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# =============================================================================
# PAYPAL PAYMENT GATEWAY
# =============================================================================
# Get your credentials from: https://developer.paypal.com/dashboard/applications
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_WEBHOOK_ID=

# =============================================================================
# PAYONEER (For seller payouts)
# =============================================================================
PAYONEER_PARTNER_ID=
PAYONEER_USERNAME=
PAYONEER_PASSWORD=
PAYONEER_PROGRAM_ID=
PAYONEER_SANDBOX=true

# =============================================================================
# WALLET SYSTEM
# =============================================================================
# Hold expiration time in hours (default: 24 hours)
WALLET_HOLD_EXPIRY_HOURS=24

# Idempotency key TTL in hours (default: 24 hours)
WALLET_IDEMPOTENCY_TTL_HOURS=24

# Minimum wallet deposit amount
WALLET_MIN_DEPOSIT=5.00

# Maximum wallet balance
WALLET_MAX_BALANCE=10000.00

# =============================================================================
# ESCROW SYSTEM
# =============================================================================
# Platform fee percentage (default: 20%)
ESCROW_PLATFORM_FEE_PERCENT=20

# Auto-release funds after X days (default: 3)
ESCROW_AUTO_RELEASE_DAYS=3

# =============================================================================
# PAYOUT SETTINGS
# =============================================================================
# Minimum payout amount
PAYOUT_MIN_AMOUNT=50.00

# Require admin approval for payouts
PAYOUT_REQUIRE_APPROVAL=true

# =============================================================================
# LICENSE API
# =============================================================================
# API key for license validation endpoint
# Generate with: php artisan tinker --execute="echo bin2hex(random_bytes(32));"
LICENSE_API_KEY=

# License validation rate limit (requests per minute)
LICENSE_API_RATE_LIMIT=60

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Admin Panel IP Whitelist (comma-separated)
# Leave empty to allow all IPs (disabled)
# Supports exact IPs and CIDR notation: 192.168.1.1,10.0.0.0/8,2001:db8::/32
ADMIN_ALLOWED_IPS=

# Security Notification Email
# Receives alerts for suspicious logins, account lockouts, brute force attacks
SECURITY_EMAIL=

# Account lockout settings
AUTH_MAX_ATTEMPTS=5
AUTH_LOCKOUT_MINUTES=15

# =============================================================================
# RATE LIMITING
# =============================================================================
# Global rate limit (requests per minute)
RATE_LIMIT_GLOBAL=60

# API rate limit (requests per minute)
RATE_LIMIT_API=60

# Login rate limit (attempts per minute)
RATE_LIMIT_LOGIN=5

# Whitelisted IPs (comma-separated) - bypass rate limiting
RATE_LIMIT_WHITELIST=

# =============================================================================
# IP BLOCKING
# =============================================================================
# Auto-block IP after X suspicious requests
IP_BLOCK_THRESHOLD=10

# Block duration in hours
IP_BLOCK_DURATION_HOURS=24

# =============================================================================
# FRAUD DETECTION
# =============================================================================
# Enable fraud detection
FRAUD_DETECTION_ENABLED=true

# High-risk transaction threshold (USD)
FRAUD_HIGH_AMOUNT_THRESHOLD=500

# Maximum transactions per hour per user
FRAUD_MAX_TRANSACTIONS_PER_HOUR=10

# New account risk period (days)
FRAUD_NEW_ACCOUNT_DAYS=7

# =============================================================================
# WEBHOOK PROTECTION
# =============================================================================
# Webhook replay protection TTL in seconds (default: 300 = 5 minutes)
WEBHOOK_REPLAY_TTL=300

# Processed webhook cleanup after X days
WEBHOOK_CLEANUP_DAYS=7

# =============================================================================
# BACKUP CONFIGURATION (spatie/laravel-backup)
# =============================================================================
# Generate a strong password: openssl rand -base64 32
BACKUP_ARCHIVE_PASSWORD=
BACKUP_NOTIFY_EMAIL="${MAIL_FROM_ADDRESS}"

# Backup disk (local, s3, etc.)
BACKUP_DISK=local

# Keep backups for X days
BACKUP_KEEP_DAYS=7

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
# Maximum file upload size in KB
UPLOAD_MAX_SIZE_KB=51200

# Allowed file extensions (comma-separated)
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,pdf,zip,rar

# Maximum avatar size in KB
AVATAR_MAX_SIZE_KB=2048

# =============================================================================
# SUBSCRIPTION / PLANS
# =============================================================================
# Free tier product limits
FREE_TIER_MAX_PRODUCTS=5
FREE_TIER_MAX_SERVICES=3

# =============================================================================
# MISCELLANEOUS
# =============================================================================
# Newsletter provider (mailchimp, sendinblue, or null for database only)
NEWSLETTER_PROVIDER=null
MAILCHIMP_API_KEY=
MAILCHIMP_LIST_ID=

# Google reCAPTCHA (optional)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Social Login (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI="${APP_URL}/auth/github/callback"

# =============================================================================
# VITE / FRONTEND
# =============================================================================
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
