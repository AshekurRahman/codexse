#######################################################################
# CODEXSE PRODUCTION ENVIRONMENT
#
# Copy this file to .env on your production server and update values
# NEVER commit this file with real credentials to version control
#######################################################################

#-----------------------------------------------------------------------
# APPLICATION SETTINGS
#-----------------------------------------------------------------------
APP_NAME=Codexse
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://yourdomain.com

# Trusted proxies for load balancers (comma-separated IPs or *)
TRUSTED_PROXIES=*

#-----------------------------------------------------------------------
# DATABASE
#-----------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=codexse_production
DB_USERNAME=codexse_user
DB_PASSWORD=STRONG_PASSWORD_HERE

# Database connection pool (for high traffic)
DB_POOL_MIN=2
DB_POOL_MAX=10

#-----------------------------------------------------------------------
# CACHE & SESSIONS
#-----------------------------------------------------------------------
# Recommended: redis for production
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Or use database if Redis not available
# CACHE_STORE=database
# SESSION_DRIVER=database
# QUEUE_CONNECTION=database

SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true

#-----------------------------------------------------------------------
# REDIS (if using Redis)
#-----------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#-----------------------------------------------------------------------
# MAIL CONFIGURATION
#-----------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=postmaster@yourdomain.com
MAIL_PASSWORD=YOUR_MAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# Alternative: Use Amazon SES
# MAIL_MAILER=ses
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_DEFAULT_REGION=us-east-1

#-----------------------------------------------------------------------
# STRIPE PAYMENT GATEWAY
#-----------------------------------------------------------------------
# Get live keys from: https://dashboard.stripe.com/apikeys
STRIPE_KEY=pk_live_YOUR_PUBLISHABLE_KEY
STRIPE_SECRET=sk_live_YOUR_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

#-----------------------------------------------------------------------
# PAYONEER (if using)
#-----------------------------------------------------------------------
PAYONEER_PARTNER_ID=your_partner_id
PAYONEER_USERNAME=your_username
PAYONEER_PASSWORD=your_password
PAYONEER_API_URL=https://api.payoneer.com

#-----------------------------------------------------------------------
# SOCIAL LOGIN
#-----------------------------------------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=${APP_URL}/auth/facebook/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=${APP_URL}/auth/github/callback

#-----------------------------------------------------------------------
# FILE STORAGE
#-----------------------------------------------------------------------
FILESYSTEM_DISK=s3

# Amazon S3
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=codexse-production
AWS_USE_PATH_STYLE_ENDPOINT=false

# Or use local storage
# FILESYSTEM_DISK=public

#-----------------------------------------------------------------------
# LOGGING
#-----------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single,slack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Slack notifications for errors (optional)
LOG_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

#-----------------------------------------------------------------------
# SECURITY SETTINGS
#-----------------------------------------------------------------------
# Admin IP whitelist (comma-separated, leave empty to disable)
ADMIN_IP_WHITELIST=

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# CORS
CORS_ALLOWED_ORIGINS=${APP_URL}

# Two-Factor Authentication
REQUIRE_ADMIN_2FA=true

#-----------------------------------------------------------------------
# MONITORING & ERROR TRACKING (Optional)
#-----------------------------------------------------------------------
# Sentry
SENTRY_LARAVEL_DSN=https://xxx@sentry.io/xxx

# New Relic
# NEWRELIC_LICENSE_KEY=your-license-key

#-----------------------------------------------------------------------
# QUEUE WORKERS
#-----------------------------------------------------------------------
QUEUE_FAILED_DRIVER=database
QUEUE_RETRY_AFTER=90

#-----------------------------------------------------------------------
# BROADCASTING (for real-time features)
#-----------------------------------------------------------------------
BROADCAST_CONNECTION=pusher

PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-key
PUSHER_APP_SECRET=your-pusher-secret
PUSHER_APP_CLUSTER=mt1

#-----------------------------------------------------------------------
# BACKUP SETTINGS
#-----------------------------------------------------------------------
BACKUP_DISK=s3
BACKUP_NOTIFICATION_EMAIL=admin@yourdomain.com

#-----------------------------------------------------------------------
# VITE (for asset building)
#-----------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
